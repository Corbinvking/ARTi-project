# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# JWT Configuration  
JWT_AUDIENCE=authenticated
JWT_ISSUER=https://your-project-ref.supabase.co/auth/v1

# API Configuration
API_BASE_URL=https://api.yourdomain.com
NODE_ENV=production
PORT=3001

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Provider APIs
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
SPOTIFY_REDIRECT_URI=https://api.yourdomain.com/auth/spotify/callback

AIRTABLE_API_KEY=your-airtable-api-key
AIRTABLE_BASE_ID=your-base-id

# LLM Configuration (OpenRouter API Key)
OPENROUTER_API_KEY=your-openrouter-api-key

# Webhook Configuration
WEBHOOK_SECRET=your-32-char-hex-secret
N8N_WEBHOOK_SECRET=your-n8n-webhook-secret

# Sentry (Optional)
SENTRY_DSN=your-sentry-dsn

# Frontend Environment (Next.js)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
NEXT_PUBLIC_API_BASE_URL=https://api.yourdomain.com
