{
  "name": "@arti/api",
  "version": "1.0.0",
  "description": "ARTi Marketing Ops API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "clean": "rimraf dist",
    "db:migrate": "tsx src/scripts/migrate.ts",
    "db:seed": "tsx src/scripts/seed.ts",
    "deploy": "docker build -t ghcr.io/username/arti-api:latest . && docker push ghcr.io/username/arti-api:latest"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.0",
    "@fastify/rate-limit": "^9.1.0",
    "@supabase/supabase-js": "^2.38.0",
    "bullmq": "^4.12.2",
    "fastify": "^4.24.3",
    "ioredis": "^5.3.2",
    "jose": "^5.1.0",
    "pino": "^8.15.1",
    "zod": "^3.22.4",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4", 
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "pino-pretty": "^10.2.3",
    "rimraf": "^5.0.5",
    "tsc-alias": "^1.8.8",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
