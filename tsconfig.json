{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist/scripts",
    "rootDir": "./scripts",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "moduleResolution": "node"
  },
  "include": [
    "scripts/import-youtube-campaigns.ts",
    "scripts/import-instagram-campaigns.ts",
    "scripts/import-soundcloud-submissions.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

